        // State
        let currentStationId = 1;
        let currentSubSlide = 0;
        let currentMainSlide = 0;
        const totalMainSlides = 6;
        
        // Track Deep Dive Completion
        let deepDiveOpened = {
            1: false,
            2: false,
            3: false,
            4: false
        };

        // Touch Handling Variables
        let touchStartX = 0;
        let touchEndX = 0;

        // Init
        document.addEventListener('DOMContentLoaded', () => {
            showSlide(0);
            
            // Touch Swipe Listener
            document.addEventListener('touchstart', e => {
                touchStartX = e.changedTouches[0].screenX;
            });
            
            document.addEventListener('touchend', e => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            });
        });

        function handleSwipe() {
            // Check if overlay is open
            if(document.getElementById('deep-dive-overlay').classList.contains('opacity-100')) {
                if (touchEndX < touchStartX - 50) nextSubSlide();
                if (touchEndX > touchStartX + 50) prevSubSlide();
            } else {
                if (touchEndX < touchStartX - 50) nextSlide();
                if (touchEndX > touchStartX + 50) prevSlide();
            }
        }

        // Main Navigation
        function showSlide(index) {
            // Hide all
            document.querySelectorAll('.main-slide').forEach(slide => {
                slide.classList.add('hidden');
                slide.classList.remove('flex');
            });
            
            // Show current
            const currentEl = document.getElementById(`slide-${index}`);
            currentEl.classList.remove('hidden');
            currentEl.classList.add('flex');
            
            // Update Header Indicator
            const indicator = document.getElementById('station-indicator');
            if(index === 0) indicator.innerText = "Intro";
            else if(index === 5) indicator.innerText = "Pagsusuri";
            else indicator.innerText = index;
        }

        function nextSlide() {
            // Logic to prevent skipping deep dive
            // currentMainSlide 1 = Station 1, 2 = Station 2, etc.
            if (currentMainSlide >= 1 && currentMainSlide <= 4) {
                if (!deepDiveOpened[currentMainSlide]) {
                    document.getElementById('reminder-modal').classList.remove('hidden');
                    return;
                }
            }

            if (currentMainSlide < totalMainSlides - 1) {
                currentMainSlide++;
                showSlide(currentMainSlide);
            }
        }

        function prevSlide() {
            if (currentMainSlide > 0) {
                currentMainSlide--;
                showSlide(currentMainSlide);
            }
        }
        
        function resetSlides() {
            // Reset Deep Dive state on restart
            deepDiveOpened = { 1: false, 2: false, 3: false, 4: false };
            
            // Remove checkmarks from buttons (visual reset)
            for(let i=1; i<=4; i++) {
                const btn = document.getElementById(`btn-deepdive-${i}`);
                if(btn) btn.classList.add('animate-bounce');
            }

            currentMainSlide = 0;
            showSlide(0);
        }

        // Reminder Modal Logic
        function closeReminder() {
            document.getElementById('reminder-modal').classList.add('hidden');
        }

        // Deep Dive Modal Logic
        function openDeepDive(stationId) {
            currentStationId = stationId;
            currentSubSlide = 0;
            renderSubSlide();
            
            // Mark as opened
            deepDiveOpened[stationId] = true;
            
            // Visual feedback on the button
            const btn = document.getElementById(`btn-deepdive-${stationId}`);
            btn.classList.remove('animate-bounce'); // Stop bouncing to indicate done
            
            const overlay = document.getElementById('deep-dive-overlay');
            overlay.classList.remove('opacity-0', 'pointer-events-none');
            overlay.classList.add('opacity-100', 'pointer-events-auto');
        }

        function closeDeepDive() {
            const overlay = document.getElementById('deep-dive-overlay');
            overlay.classList.remove('opacity-100', 'pointer-events-auto');
            overlay.classList.add('opacity-0', 'pointer-events-none');
        }

        function renderSubSlide() {
            const data = stationsData[currentStationId][currentSubSlide];
            const contentDiv = document.getElementById('deep-dive-content');
            
            // Update Page Indicator
            document.getElementById('modal-page-indicator').innerText = `${currentSubSlide + 1} / ${stationsData[currentStationId].length}`;

            // Build Content with Animation
            contentDiv.innerHTML = data.content;

            // Update Dots
            const indicatorsDiv = document.getElementById('slide-indicators');
            let dotsHtml = '';
            for(let i=0; i < stationsData[currentStationId].length; i++) {
                let activeClass = i === currentSubSlide ? 'bg-katipunan-gold w-6' : 'bg-white/30 w-2 hover:bg-white/50';
                dotsHtml += `<div class="h-2 rounded-full ${activeClass} transition-all duration-300 cursor-pointer" onclick="goToSubSlide(${i})"></div>`;
            }
            indicatorsDiv.innerHTML = dotsHtml;
        }

        function nextSubSlide() {
            if (currentSubSlide < stationsData[currentStationId].length - 1) {
                currentSubSlide++;
                renderSubSlide();
            } else {
                closeDeepDive();
            }
        }

        function prevSubSlide() {
            if (currentSubSlide > 0) {
                currentSubSlide--;
                renderSubSlide();
            }
        }
        
        function goToSubSlide(index) {
            currentSubSlide = index;
            renderSubSlide();
        }

        // Download Function
        function downloadApp() {
            const htmlContent = document.documentElement.outerHTML;
            const blob = new Blob([htmlContent], { type: 'text/html' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'Gender_Roles_Activity_Offline.html';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // Keyboard Nav
        document.addEventListener('keydown', function(event) {
            const overlayOpen = document.getElementById('deep-dive-overlay').classList.contains('opacity-100');
            
            if(overlayOpen) {
                if (event.key === "ArrowRight") nextSubSlide();
                if (event.key === "ArrowLeft") prevSubSlide();
                if (event.key === "Escape") closeDeepDive();
            } else {
                // Only allow arrow keys for main slides if modal is closed
                // Check if reminder is open? No need, logic handles it in nextSlide
                if (event.key === "ArrowRight") nextSlide();
                if (event.key === "ArrowLeft") prevSlide();
            }
        });

    </script>
</body>
</html>
